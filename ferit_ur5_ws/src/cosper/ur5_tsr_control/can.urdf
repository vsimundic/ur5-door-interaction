<robot name="can">
    <link name="can_body">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.15" />
            </geometry>
            <material name="metallic_silver">
                <color rgba="0.8 0.8 0.8 1.0" />
            </material>
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.15" />
            </geometry>
        </collision>

        <!-- Inertial properties -->
        <inertial>
            <mass value="0.2" /> <!-- mass in kg -->
            <origin xyz="0 0 0.075" /> <!-- Position of the center of mass -->
            <inertia
                ixx="0.0003"
                iyy="0.0003"
                izz="0.00015"
                ixy="0.0"
                ixz="0.0"
                iyz="0.0" />
        </inertial>
    </link>

    <!-- Gazebo-specific static tag -->
    <gazebo>
        <static>true</static>
    </gazebo>
</robot>